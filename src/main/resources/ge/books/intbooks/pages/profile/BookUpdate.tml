<html t:type="layout" title="${message:update.title}"
	t:sidebarTitle="Framework Version"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<div class="row">
	<div class="col-sm-12">
		<h3>Update the Book</h3>
		<t:alerts />
		<t:beaneditform t:id="form" object="book" submitLabel="Save"
			cancel="true">
			<p:description>
				<t:label for="description" />
				<t:textarea t:id="description" value="book.description" />
			</p:description>
		</t:beaneditform>
	</div>
</div>
</html>
